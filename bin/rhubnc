#!/usr/bin/env ruby
#
# rhubnc: rhuidean-based IRC bouncer
# bin/rhubnc: instantiates a new +Bouncer+ object
#
# Copyright (c) 2003-2011 Eric Will <rakaur@malkier.net>
#
# encoding: utf-8

# Prepare the environment
$: << File.join(Dir.getwd, 'lib')
$0 = 'rhubnc'

require 'rhubnc'

# This is the configuration. Edit from here down.
configure do
  logging :info

  ssl_certificate '/path/to/cert.ssl'
  ssl_private_key '/path/to/key.ssl'

  listen 4010
  listen 4011, :host => '0.0.0.0'

  user :rakaur do
    password "password"

    network :malkier do
      server "irc.malkier.net", :port => 6667
    end

    network :freenode do
      server "irc.freenode.net", :password => :partypants
    end
  end
end

